@{ ViewData["Title"] = "Welkom"; }
<div class="container">
    <div class="row">
        <div class="col-sm-12 align-middle">

            <h1>Welkom</h1>
            <p>
                We kennen elkaar nog niet! Voer een groepscode in of maak je eigen groep aan<br />
              
            </p>
        </div>
        <div class="row">
            <div class="col-sm-6 align-middle">
                <form action="join" method="get" class="input-group mb-3">
                    <input type="text" maxlength="36" name="g" id="g" class="form-control" />
                    <div class="input-group-append">

                        <button type="submit" class="btn btn-primary">Ga verder</button>
                        </div>
                </form>
            </div>
            <div class="col-sm-6 align-middle">
                <a href="/new" class="btn btn-primary">Ga naar aanmaken</a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/dist/main.js" asp-append-version="true"></script>
}
